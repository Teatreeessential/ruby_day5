<div>
    <ul class="list-group">
    <% @ask.reverse.each do |ask| %>
    <li class="list-group-item">
    <%= ask.question %>
    <small>(<%=ask.ip_address%>,<%=ask.region%>)</small>
    <a class="btn btn-success" href="/ask/<%=ask.id%>/edit">수정</a>
    <a class="btn btn-warning" href="/ask/<%=ask.id%>/contents">상세보기</a>
    <a class="btn btn-danger" href="/ask/<%=ask.id%>/delete" data-confirm="삭제하시겠습니까?">삭제</a>
    </li>  <!-- 질문 내용을 보여줄 것이다.-->
    <% end %>
    </ul>
</div>
<div class="text-center">
    <a class="btn btn-success" href = "/ask/new"> 새 질문 등록하기 </a>
    <!--링크 걸어주기-->
</div>